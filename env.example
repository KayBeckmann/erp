# Global configuration

# Backend
DB_HOST=db
MYSQL_DATABASE=erp_db
MYSQL_USER=erp_user
MYSQL_PASSWORD=erp_password
MYSQL_ROOT_PASSWORD=rootpassword
PORT=3000
JWT_SECRET=your_jwt_secret
BACKEND_PORT=3000

# Frontend (Vite)
# In der Entwicklung (Dev):
# VITE_API_URL=http://localhost:3000
#
# In der Produktion (Prod) sollte dies die öffentlich erreichbare URL sein, z.B.:
# VITE_API_URL=http://localhost:3000
VITE_API_URL=https://domain.de/api
VITE_HMR_HOST=localhost
# Setze den Frontend-Port je nach Modus:
# Für Dev: 5173, für Prod: 80 (oder den Port, den Dein Reverse Proxy verwendet)
# FRONTEND_PORT=5173
FRONTEND_PORT=8080

# Mode toggle:
# Setze PRODUCTION_MODE auf TRUE für Produktion, FALSE für Entwicklung.
# PRODUCTION_MODE=FALSE
PRODUCTION_MODE=TRUE

# NODE_ENV und FRONTEND_BUILD_TARGET sollten in Prod die Werte "production" haben,
# in Dev "development".
# NODE_ENV=development
# FRONTEND_BUILD_TARGET=development
NODE_ENV=production
FRONTEND_BUILD_TARGET=production
