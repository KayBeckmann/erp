# Global configuration

# Backend
DB_HOST=db
MYSQL_DATABASE=erp_db
MYSQL_USER=erp_user
MYSQL_PASSWORD=erp_password
MYSQL_ROOT_PASSWORD=rootpassword
PORT=3000
JWT_SECRET=your_jwt_secret
BACKEND_PORT=3000

# Frontend (Vite)
# VITE_API_URL=https://deinedomain.de/api   # Beispiel: passe den API-Endpunkt an
# VITE_HMR_HOST=deinedomain.de               # (für HMR, falls benötigt – normalerweise entfällt HMR in Prod)
VITE_API_URL=http://localhost:3000
VITE_HMR_HOST=localhost
FRONTEND_PORT=5173

# Mode toggle:
# Set PRODUCTION_MODE to TRUE for production, FALSE for development.
# PRODUCTION_MODE=TRUE
PRODUCTION_MODE=FALSE

# NODE_ENV should be "development" if PRODUCTION_MODE is FALSE,
# and "production" if PRODUCTION_MODE is TRUE.
# NODE_ENV=production
NODE_ENV=development

# FRONTEND_BUILD_TARGET: "development" for dev mode, "production" for production mode.
# FRONTEND_BUILD_TARGET=production
FRONTEND_BUILD_TARGET=development